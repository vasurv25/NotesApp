<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="forgetPasswordViewModel"
            type="com.example.notesapp.forgetPassword.ForgetPasswordViewModel" />

        <variable
            name="clickHandler"
            type="com.example.notesapp.forgetPassword.ForgetPasswordActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_ellipse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/icon_rectangle"
            android:transitionName="@string/transition_rect"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/guideline_ellipse_hor"
            app:layout_constraintEnd_toStartOf="@+id/guideline_ellipse_ver" />

        <ImageView
            android:id="@+id/iv_rectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/icon_ellipse"
            android:transitionName="@string/transition_ellipse"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/guideline_ellipse_hor"
            app:layout_constraintStart_toStartOf="@+id/guideline_rect_vert" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_forget_pass"
            app:layout_constraintEnd_toStartOf="@+id/guideline_rect_vert"
            app:layout_constraintStart_toStartOf="@+id/guideline_ellipse_ver"
            app:layout_constraintTop_toTopOf="@+id/guideline_ellipse_hor" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:letterSpacing="0.1"
            android:text="@string/title_forget_password"
            android:textColor="@color/orange"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guideline_rect_vert"
            app:layout_constraintStart_toStartOf="@+id/guideline_ellipse_ver"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/tv_forget_password_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="3.5sp"
            android:text="@string/you_will_get_an_otp_message"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/tv_edit_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3.5sp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/guideline_background"
            app:layout_constraintEnd_toStartOf="@+id/iv_number_edit_icon"
            app:layout_constraintStart_toStartOf="@+id/guideline_ellipse_ver"
            app:layout_constraintTop_toBottomOf="@+id/tv_forget_password_msg"
            app:layout_constraintVertical_bias="0.5"
            tools:text="+91 - 9876543210" />

        <ImageView
            android:id="@+id/iv_number_edit_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/ic_number_edit"
            android:onClick="@{clickHandler::onEditNumberIconClick}"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/guideline_background"
            app:layout_constraintEnd_toStartOf="@+id/guideline_rect_vert"
            app:layout_constraintTop_toBottomOf="@+id/tv_forget_password_msg"
            app:layout_constraintVertical_bias="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_ellipse_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="95dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_ellipse_hor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_rect_vert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="95dp" />

        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/forget_pass_background"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline_background"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_number_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/guideline_rect_vert"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline_ellipse_ver"
            app:layout_constraintTop_toTopOf="@+id/iv_background">

            <EditText
                android:id="@+id/et_country_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:enabled="false"
                android:text="+91"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_fp_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:addTextChangedListener="@{forgetPasswordViewModel.numberWatcher}"
                android:backgroundTint="@color/white"
                android:hint="Phone Number"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/white"
                android:textColorHint="@color/colorTransparentWhite"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/et_country_code"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/bt_fp_circular_progress"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_bg_button_white"
            android:gravity="center"
            android:onClick="@{forgetPasswordViewModel::onSendOtpClick}"
            android:text="Send OTP"
            android:textAllCaps="false"
            android:textColor="@color/color_orange_text"
            android:textSize="16sp"
            app:finalCornerAngle="30dp"
            app:initialCornerAngle="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_background"
            app:layout_constraintEnd_toStartOf="@+id/guideline_rect_vert"
            app:layout_constraintStart_toStartOf="@+id/guideline_ellipse_ver"
            app:layout_constraintTop_toBottomOf="@+id/cl_number_layout"
            app:layout_constraintVertical_bias="0.17000002"
            app:spinning_bar_color="@color/orange"
            app:spinning_bar_padding="6dp"
            app:spinning_bar_width="4dp" />

        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/bt_fp_circular_progress_verify"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_bg_button_white"
            android:gravity="center"
            android:onClick="@{clickHandler::onVerifyOtpClick}"
            android:text="Verify OTP"
            android:textAllCaps="false"
            android:textColor="@color/color_orange_text"
            android:textSize="16sp"
            android:visibility="gone"
            app:finalCornerAngle="30dp"
            app:initialCornerAngle="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_background"
            app:layout_constraintEnd_toStartOf="@+id/guideline_rect_vert"
            app:layout_constraintStart_toStartOf="@+id/guideline_ellipse_ver"
            app:layout_constraintTop_toBottomOf="@+id/cl_number_layout"
            app:layout_constraintVertical_bias="0.17000002"
            app:spinning_bar_color="@color/orange"
            app:spinning_bar_padding="6dp"
            app:spinning_bar_width="4dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_otp_layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="72dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_background">

            <EditText
                android:id="@+id/et_otp_first"
                style="@style/pin_edittext_style"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_otp_border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_otp_second"
                style="@style/pin_edittext_style"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:background="@drawable/shape_otp_border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/et_otp_first"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_otp_third"
                style="@style/pin_edittext_style"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:background="@drawable/shape_otp_border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/et_otp_second"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_otp_four"
                style="@style/pin_edittext_style"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:background="@drawable/shape_otp_border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/et_otp_third"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_otp_five"
                style="@style/pin_edittext_style"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:background="@drawable/shape_otp_border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/et_otp_four"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_otp_six"
                style="@style/pin_edittext_style"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:background="@drawable/shape_otp_border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/et_otp_five"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/pin_hidden_edittext"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:background="@null"
                android:cursorVisible="false"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.45" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/cl_snackbar_forget_pass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_fp_spannable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.07"
            android:lineSpacingExtra="2.5sp"
            android:text="@string/resend_code_text"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_fp_circular_progress"
            app:layout_constraintVertical_bias="0.8" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>